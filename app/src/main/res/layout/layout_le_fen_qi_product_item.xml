<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_fl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_corner_10_white"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.qwbasvsd.zmnxcmdsjsdk.lefenqiweidgt.ProportionLeFenQiNewsFrameLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:proporty="1.65">

                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:hl_cornerRadius="3dp">

                    <ImageView
                        android:id="@+id/product_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/app_logo" />

                </com.lihang.ShadowLayout>

            </com.qwbasvsd.zmnxcmdsjsdk.lefenqiweidgt.ProportionLeFenQiNewsFrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shangpin_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好分期"
                    android:textColor="@color/text_normal_color"
                    android:textSize="@dimen/textSize_16" />

                <TextView
                    android:id="@+id/tedian_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorPrimary"
                    android:paddingStart="5dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="2dp"
                    android:text="日息低"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/edu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="1000-10000"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="额度申请"
            android:textColor="#666666"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周期"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSize_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shijian_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3-36个月"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSize_16"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shuliang_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="235654"
                android:textColor="#666666"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请"
                android:textColor="#666666"
                android:textSize="16sp" />

        </LinearLayout>

        <com.lihang.ShadowLayout
            android:id="@+id/yjsq_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:focusable="false"
            app:hl_cornerRadius="50dp"
            app:hl_layoutBackground="#fd5f46">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:paddingTop="8dp"
                android:paddingEnd="50dp"
                android:paddingBottom="8dp"
                android:text="一键申请"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_16" />

        </com.lihang.ShadowLayout>

    </LinearLayout>
</FrameLayout>