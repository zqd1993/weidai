<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:background="@drawable/tyhfgh"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/shape_text_bg"
            android:orientation="horizontal">

            <com.lihang.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:hl_cornerRadius="50dp">

                <ImageView
                    android:id="@+id/product_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/app_logo" />

            </com.lihang.ShadowLayout>

            <TextView
                android:id="@+id/product_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="80dp"
                android:layout_gravity="center_vertical"
                android:text="好分期"
                android:textColor="@color/text_normal_color"
                android:textSize="16sp"
                android:textStyle="italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/limit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="10000 - 20000"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="申请额度(元)"
            android:textColor="#999999"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/people_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123345"
                android:textColor="#999999"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:background="@drawable/shape_text_bg_1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cycle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="36个月"
                android:textColor="#999999"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:background="@drawable/shape_text_bg_1"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:maxEms="1"
            android:gravity="center"
            android:text="立即申请"
            android:textSize="16sp"
            android:background="@drawable/zxzgrser"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="利息低"
            android:textColor="#999999"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/parent_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:visibility="gone">

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <View
        android:id="@+id/click_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>