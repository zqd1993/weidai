<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    app:hl_cornerRadius="@dimen/dp_10"
    app:hl_layoutBackground="#c5d4f5">

    <FrameLayout
        android:id="@+id/parent_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/set_pic"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/kyuj" />

        <TextView
            android:id="@+id/set_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_10"
            android:text="注册协议"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16" />

    </FrameLayout>

</com.lihang.ShadowLayout>