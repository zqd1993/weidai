<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_ll"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:hl_shadowLimit="3dp"
    app:hl_shadowColor="@color/dsad"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.lihang.ShadowLayout
            android:id="@+id/pic_sl"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            app:hl_cornerRadius="5dp">

            <ImageView
                android:id="@+id/goods_pic_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/app_logo" />

        </com.lihang.ShadowLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shangpin_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/dsad"
                android:text="好分期"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:text="额度申请"/>

        </LinearLayout>

        <TextView
            android:id="@+id/edu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dsad"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="1000-10000" />

        <TextView
            android:id="@+id/shuliang_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:text="已申请人数：235654"/>

        <com.lihang.ShadowLayout
            android:id="@+id/shenqing_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_marginTop="10dp"
            app:hl_cornerRadius="50dp"
            app:hl_startColor="#6b25df"
            app:hl_endColor="#9c26ea">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/white"
                android:text="一键申请" />

        </com.lihang.ShadowLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="急速审批" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:background="#666666" />

            <TextView
                android:id="@+id/shijian_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="周期3-36个月"/>

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:background="#666666" />

            <TextView
                android:id="@+id/tedian_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="日息低"/>

        </LinearLayout>

    </LinearLayout>

</com.lihang.ShadowLayout>