<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/qgdfh" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <com.lihang.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:hl_cornerRadius="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/app_logo" />

        </com.lihang.ShadowLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16"
            android:textStyle="bold" />

        <com.lihang.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            app:hl_cornerRadius="10dp"
            app:hl_layoutBackground="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/lhjkhgjk" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/phone_et"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@null"
                            android:cursorVisible="true"
                            android:hint="@string/input_phone_number"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textColor="@color/text_normal_color"
                            android:textColorHint="@color/color_999999"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/textSize_16" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="20dp"
                            android:background="@color/dividing" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verification_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/tyujghj" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:padding="3dp">

                            <EditText
                                android:id="@+id/verification_et"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@null"
                                android:cursorVisible="true"
                                android:hint="@string/input_verification"
                                android:inputType="number"
                                android:maxLength="6"
                                android:textColor="@color/text_normal_color"
                                android:textColorHint="@color/color_999999"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/textSize_16" />

                            <TextView
                                android:id="@+id/get_verification_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingEnd="20dp"
                                android:text="@string/get_verification"
                                android:textColor="#999999" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="20dp"
                            android:background="@color/dividing" />


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/shape_login_btn_bg"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textStyle="bold"
                    android:text="登  录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/remind_cb"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:button="@drawable/checkbox_bg" />

                    <com.mmaeryrusu.qqzdryty.fenqihuanqianbeiwidget.SpanTextViewFenQiHuanQianBei
                        android:id="@+id/login_remind_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/textSize_16" />

                </LinearLayout>

            </LinearLayout>

        </com.lihang.ShadowLayout>

    </LinearLayout>

    <include layout="@layout/loading_layout_fen_qi_huan_qian_bei" />

</FrameLayout>